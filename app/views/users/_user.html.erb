<li>
  <%= gravatar_for user, size: Settings.user.gravatar %>
  <%= link_to user.name, user %>
  <% if current_user.is_admin? && !current_user?(user) %>
    |<%= link_to t("users.delete"), user, method: :delete,
                                 data: { confirm: t("users.delete_message") } %>
  <% end %>

</li>
